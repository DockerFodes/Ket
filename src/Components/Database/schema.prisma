datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Users {
    id            String      @id @db.VarChar(20)
    prefix        String      @db.VarChar(3)
    lang          String?     @db.VarChar(2)
    commands      Int         @default(1)
    banned        String?
}

model Servers {
    id          String      @id @db.VarChar(20)
    lang        String?     @db.VarChar(2)
    globalchat  String?     @db.VarChar(20)
    partner     Boolean?
    banned      String?
}

model Commands {
    name        String      @id
    maintenance Boolean?
    reason      String?
}

model Globalchat {
    id          String      @id @db.VarChar(20)
    guild       String      @db.VarChar(20)
    author      String      @db.VarChar(20)
    editCount   Int         @default(0)
    messages    String[]    @db.VarChar(40)
}

model Blacklist {
    id          String      @id @db.VarChar(20)
    timeout     Int
    warns       Int         @default(1)
}